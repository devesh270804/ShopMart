<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbe0b"
    tools:context=".SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blinkit"
                android:textColor="#000000"
                android:textSize="78.00sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/it"
                android:textColor="#008813"
                android:textSize="78.00sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/india_s_last_minute_app"
            android:textColor="#000000"
            android:textSize="19.50sp"/>

        <View
            android:layout_width="234.00dp"
            android:layout_height="2.60dp"
            android:layout_weight="3"
            android:layout_marginTop="26.00dp"
            android:background="#7B7777" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_zomato_company"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="26.00dp"
            android:textSize="11.00sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>